---
import GitHubIcon from '../icons/github.astro'
import LinkedInIcon from '../icons/linkedin.astro'
import EmailIcon from '../icons/envelope.astro'
import YouTubeIcon from '../icons/youtube.astro'
import BilibiliIcon from '../icons/bilibili.astro'
const socialMedia = [
    {
        name: "Email",
        icon: EmailIcon,
        link: "mailto:wenwei66.lin@gmail.com",
    },
    {
        name: "Github",
        icon: GitHubIcon,
        link: "https://www.github.com/wenwei-lin",
    },
    {
        name: "LinkedIn",
        icon: LinkedInIcon,
        link: "https://www.linkedin.com/in/wenwei-lin",
    },
    {
        name: "YouTube",
        icon: YouTubeIcon,
        link: "https://www.youtube.com/@wenwei-lin",
    },
    {
        name: "BiliBili",
        icon: BilibiliIcon,
        link: "https://space.bilibili.com/34104984",
    },
];
---

<footer class="pt-10 pb-4">
    <ul class="flex flex-row flex-wrap gap-4 justify-center align-middle">
        {
            socialMedia.map((item) => {
                return (
                    <li class="w-6 block my-auto">
                        <a href={`${item.link}`} target="_blank" class="">
                            <span class="sr-only">${item.name}</span>
                            <span
                                class={`fill-current text-gray-700 hover:text-blue-500`}
                            >
                                {<item.icon />}
                            </span>
                        </a>
                    </li>
                );
            })
        }
    </ul>

    <p class="text-center mt-4">
        Wenwei Lin &nbsp;•&nbsp; &copy; 2023 &nbsp;•&nbsp; <a
            href="/"
            class="text-teal-500 hover:text-blue-500">Wenwei's Blog</a
        >
    </p>
</footer>
