---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import PageContainer from "../components/page-container.astro";

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script
            src="https://kit.fontawesome.com/eb6c2c2232.js"
            crossorigin="anonymous"></script>
        <title>{title}</title>
    </head>
    <body>
        <PageContainer>
            <section class="default-layout">
                <Header />
                <main class="main-content">
                    <slot />
                </main>
                <Footer />
            </section>
        </PageContainer>
    </body>
</html>

<style is:global>
    :root {
        --black: #404040;
        --teal: #14b8a6;
        --blue-500: rgb(59 130 246);
        --blue-600: rgb(37 99 235);
        --blue-700: rgb(29 78 216);
        --gray-500: rgb(115 115 115);
        --gray-200: rgb(229 229 229);
    }

    html {
        box-sizing: border-box;
    }

    *,
    *::before,
    *::after {
        box-sizing: inherit;
    }

    html,
    body {
        margin: 0;
        padding: 0;
    }

    .gray-line {
        margin-top: 2rem;
        height: 1px;
        background-color: var(--gray-200);
    }
</style>

<style>
    .default-layout {
        display: flex;
        flex-flow: column wrap;
        min-height: 100vh;
        justify-content: space-between;
    }

    .main-content {
        /** make the main content align next to header */
        margin-bottom: auto;
    }
</style>
